rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'users' directory
    match /users/{userId}/{allPaths=**} {
      // Allow public read access for anyone to see profile images
      allow read;
      
      // Allow write access (create, update, delete) only if the
      // requesting user's ID matches the {userId} in the path.
      // This ensures users can only manage their own files.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
