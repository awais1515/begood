
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // A user can get their own document, and any signed-in user can get any other user's document.
      allow get: if isSignedIn();
      
      // Allow signed-in users to list profiles, but only if they are not suspended.
      allow list: if isSignedIn() && resource.data.isSuspended == false;

      // Only the owner can update their own profile.
      allow update: if isOwner(userId);
      
      // A user can create their own user doc upon signup.
      allow create: if isOwner(userId);

      // Users cannot delete their own profile document directly. This is handled by a backend function.
      allow delete: if false;
    }

    // User Interactions (likes, dislikes, blocks)
    match /userInteractions/{userId} {
      // Users can only read and write their own interactions document.
      allow read, write: if isOwner(userId);
    }
    
    // Reports collection
    match /reports/{reportId} {
      // Any signed-in user can create a report.
      allow create: if isSignedIn();
      // Only backend processes should read reports.
      allow read, update, delete: if false;
    }

    // Chats collection
    match /chats/{chatId} {
      // Users can only access chats they are a part of.
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in chats they are part of.
        allow read: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        // Users can write messages if they are a participant in the chat.
        allow create: if isSignedIn() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        // Messages cannot be updated or deleted.
        allow update, delete: if false;
      }
    }
  }
}
