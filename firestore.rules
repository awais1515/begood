
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read any user's profile (for matching)
      // A user can only create, update, or delete their own profile
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Rules for the 'userInteractions' collection (likes, dislikes, blocks)
    match /userInteractions/{userId} {
      // Users can only read and write their own interaction data
      allow read, write: if isOwner(userId);
    }
    
    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // A user can read/write to a chat if their UID is in the 'participants' array
      allow read, write: if isAuthenticated() && request.auth.uid in resource.data.participants;
      
      // Rules for messages within a chat
      match /messages/{messageId} {
        // A user can read messages if they are a participant in the parent chat
        // A user can create a message if they are a participant and the senderId matches their UID
        allow read: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants && request.resource.data.senderId == request.auth.uid;
      }
    }

    // Rules for the 'reports' collection
    match /reports/{reportId} {
        // Any authenticated user can create a report
        allow create: if isAuthenticated();
        // Only admins (not implemented in-app, managed via console) should be able to read/delete reports
        allow read, write, delete: if false; 
    }
  }
}
