
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow any authenticated user to read/write to the database.
    // This is for debugging and will be tightened later.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicit rules for collections
    match /users/{userId} {
      // Any authenticated user can read profiles, a user can create/update their own profile
      allow read: if request.auth != null;
      allow create, update: if request.auth.uid == userId;
    }

    match /userInteractions/{userId} {
      // A user can manage their own interactions document
      allow read, create, update: if request.auth.uid == userId;
    }

    match /reports/{reportId} {
      // Any authenticated user can create a report
      allow create: if request.auth != null;
    }

    match /chats/{chatId} {
      // Users can only read/write to chats they are a part of
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    match /chats/{chatId}/messages/{messageId} {
      // Users can only read/write messages in chats they are a part of
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
    }
  }
}
