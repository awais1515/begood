
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if a user owns a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read any profile (for matching)
      allow get, list: if isSignedIn();
      // A user can only create, update, or delete their own profile
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    // Rules for the 'userInteractions' collection (likes, dislikes, blocks)
    match /userInteractions/{userId} {
      // A user can only read and write their own interactions document
      allow read, write: if isOwner(userId);
    }

    // Rules for the 'chats' collection
    match /chats/{chatId} {
      // A user can read or write a chat document if their UID is in the 'participants' array
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;

      // Rules for the 'messages' subcollection within a chat
      match /messages/{messageId} {
        // A user can list/read messages if they are a participant of the parent chat
        allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        // A user can create a message if they are a participant and the senderId is their own UID
        allow create: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants && request.resource.data.senderId == request.auth.uid;
        // No one can update or delete messages
        allow update, delete: if false;
      }
    }

    // Rules for the 'reports' collection
    match /reports/{reportId} {
        // Any authenticated user can create a report
        allow create: if isSignedIn();
        // Only specific admin roles should be able to read/delete reports (not implemented in this ruleset)
        allow read, update, delete: if false;
    }
  }
}
